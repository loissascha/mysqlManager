@using MySqlManager.Dtos
@using MySqlManager.Services
@inherits LayoutComponentBase
@inject MySqlManagerService MySqlManagerService
@attribute [StreamRendering]

<CascadingValue Value="this">
    <div class="page">
        <div class="sidebar">
            <NavMenu/>
        </div>

        <main>
            <div class="top-row px-0 ps-0" id="toprow">
                @TopRow
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
</CascadingValue>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private RenderFragment? TopRow { get; set; }

    private void SetTopRow(RenderFragment content)
    {
        TopRow = content;
        StateHasChanged();
    }

    public void SetTopRowForTableView(string? database, string? table, string? active = null)
    {
        SetTopRow(@<div class="container-fluid">
            <ul class="list-unstyled d-flex flex-row align-items-center">
                <li class=""><a class="btn btn-primary ms-0 me-2 mt-3 @(active == "browse" ? "active" : "")" href="@($"/database/{database}/table/{table}")">Browse</a></li>
                <li class=""><a class="btn btn-primary me-2 mt-3 @(active == "sql" ? "active" : "")" href="@($"/database/{database}/table/{table}/sql")">SQL</a></li>
                <li class=""><a class="btn btn-primary me-2 mt-3 @(active == "search" ? "active" : "")" href="@($"/database/{database}/table/{table}/search")">Search</a></li>
                <li class=""><a class="btn btn-primary mt-3 @(active == "insert" ? "active" : "")" href="@($"/database/{database}/table/{table}/insert")">Insert</a></li>
            </ul>
        </div>);
    }

    public void SetTopRowForDatabaseView(string? database, string? active = null)
    {
        Console.WriteLine("SetTopRowForDatabaseView");
        SetTopRow(@<div class="container-fluid">
            <ul class="list-unstyled d-flex flex-row align-items-center">
              <li class=""><a class="btn btn-primary ms-0 me-2 mt-3 @(active == "overview" ? "active" : "")" href="@($"/database/{database}")">Overview</a></li>
              <li class=""><a class="btn btn-primary me-2 mt-3 @(active == "import" ? "active" : "")" href="@($"/database/{database}/import")">Import</a></li>
            </ul>
        </div>);
    }
}